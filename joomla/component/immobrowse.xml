<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
  <name>COM_IMMOBROWSE</name>
  <!-- The following elements are optional and free of formatting constraints -->
  <creationDate>May 2017</creationDate>
  <author>HOMEINFO - Digitale Informationssysteme GmbH</author>
  <authorEmail>info@homeinfo.de</authorEmail>
  <authorUrl>http://www.example.org</authorUrl>
  <copyright>2017 HOMEINFO - Digitale Informationssysteme GmbH</copyright>
  <license>GPL v.3</license>
  <!--  The version string is recorded in the components table -->
  <version>0.0.1</version>
  <!-- The description is optional and defaults to the name -->
  <description>COM_IMMOBROWSE_DESCRIPTION</description>

  <install> <!-- Runs on install -->
    <sql>
      <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
    </sql>
  </install>
  <uninstall> <!-- Runs on uninstall -->
    <sql>
      <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
    </sql>
  </uninstall>

  <files folder="site">
    <filename>index.html</filename>
    <filename>immobrowse.php</filename>
    <filename>controller.php</filename>
    <folder>views</folder>
    <folder>models</folder>
    <folder>assets</folder>
  </files>

  <administration>
    <menu>COM_IMMOBROWSE_MENU</menu>
    <files folder="admin">
      <filename>index.html</filename>
      <filename>immobrowse.php</filename>
      <filename>controller.php</filename>
      <folder>sql</folder>
      <folder>tables</folder>
      <folder>models</folder>
      <folder>views</folder>
    </files>
    <languages folder="language">
      <language tag="de-DE">de-DE/de-DE.com_immobrowse.ini</language>
      <language tag="de-DE">de-DE/de-DE.com_immobrowse.sys.ini</language>
    </languages>
  </administration>
</extension>
