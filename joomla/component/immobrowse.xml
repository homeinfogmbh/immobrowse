<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
  <name>COM_IMMOBROWSE</name>
  <creationDate>May 2017</creationDate>
  <author>Richard Neumann</author>
  <authorEmail>r.neumann@homeinfo.de</authorEmail>
  <authorUrl>https://www.homeinfo.de/</authorUrl>
  <copyright>2017 HOMEINFO - Digitale Informationssysteme GmbH</copyright>
  <license>GPL v.3</license>
  <version>1.0.0</version>
  <description>COM_IMMOBROWSE_DESCRIPTION</description>

  <install>
    <sql>
      <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
    </sql>
  </install>
  <uninstall>
    <sql>
      <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
    </sql>
  </uninstall>

  <files folder="site">
    <filename>index.html</filename>
    <filename>immobrowse.php</filename>
    <filename>controller.php</filename>
    <folder>views</folder>
    <folder>models</folder>
    <folder>assets</folder>
  </files>

  <administration>
    <menu>COM_IMMOBROWSE_MENU</menu>
    <files folder="admin">
      <filename>index.html</filename>
      <filename>immobrowse.php</filename>
      <filename>controller.php</filename>
      <folder>sql</folder>
      <folder>tables</folder>
      <folder>models</folder>
      <folder>views</folder>
    </files>
    <languages folder="language">
      <language tag="de-DE">de-DE/de-DE.com_immobrowse.ini</language>
      <language tag="de-DE">de-DE/de-DE.com_immobrowse.sys.ini</language>
    </languages>
  </administration>
</extension>
